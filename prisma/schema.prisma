generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url= env("DATABASE_URL")
}


model Admin {
  id            String      @id @default(uuid()) @unique
  name          String
  email         String      @unique
  password      String
  permission_add           Boolean     @default(false)
  permission_edit          Boolean     @default(false)
  permission_delete        Boolean     @default(false)
  permission_update        Boolean     @default(false)
  permission_updateStatus  Boolean     @default(false)
  permission_deleteOrder   Boolean     @default(false)
  permission_add_new_worker Boolean @default(false)

  company Company @relation(fields: [companyId], references: [id])
  companyId String

  createdAt     DateTime    @default(now())
  @@map("users")
}

model Company {
  id  String  @id @default(uuid()) @unique
  name  String  
  users Admin[]
  email String @unique
  contact String @unique
  password String
  createdAt     DateTime    @default(now())
  
  @@map("companies")
}

model Product {
  id              String      @id @default(uuid()) @unique
  category        String
  title           String
  description     String?
  images          Image[] 
  value           Decimal
  discountPercent Decimal
  status Boolean @default(true)
}

model Image {
  id              String      @id @default(uuid()) @unique
  imageUrl        String
  product         Product[]    
  productId       String   
  status Boolean @default(true)
  @@map(name: "images")     
}
