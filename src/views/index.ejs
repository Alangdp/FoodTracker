<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro e Lista de Usuários</title>

    <!-- Importando Tailwind CSS -->
    <link rel="stylesheet" href="/public/styles/output.css" />
  </head>
  <body>
    <div
      class="h-screen grid bg-[#EDEDED]"
      style="grid-template-columns: 250px 1fr"
    >
      <%- include('./includes/InternalSidebar.ejs') %>
      <div class="w-full h-full">
        <%- include('./includes/Navbar.ejs') %>
        <div class="w-full h-full flex flex-col items-center text-lg">
          <div
            class="container w-full h-full flex flex-col items-center bg-white p-10"
          >
            <div
              class="w-full h-16 bg-[#EDEDED] rounded-md gap-8 grid grid-cols-4 py-2 px-4"
            >
              <div class="flex items-center gap-2 font-semibold">
                <div
                  class="w-10 h-10 bg-green-500 flex items-center justify-center rounded-full hover:bg-green-600 duration-300 cursor-pointer"
                >
                  <img src="/public/svg/cross.svg" alt="User Plus Icon" />
                </div>
                <h4>Cadastrar usuário</h4>
              </div>

              <div
                class="search w-full p-2 bg-[#D9D9D9] rounded-xl flex items-center justify-center gap-2 text-black"
              >
                <img src="/public/svg/search.svg" alt="Search Icon" />
                <input
                  class="border-0 bg-transparent outline-none placeholder-black placeholder-opacity-60 w-full"
                  type="text"
                  placeholder="Procurar por usuários"
                />
              </div>
            </div>

            <!-- Card grande para cadastro de usuários -->
            <div class="mt-8 bg-white rounded-xl shadow-md p-8 w-full">
              <h2 class="text-xl font-semibold mb-4">Cadastro de Usuários</h2>
              <div class="">
                <form action="/cadastrar-usuario" method="post">
                  <div class="grid grid-cols-2 gap-4">
                    <div class="Inputs">
                      <div class="mb-4">
                        <label for="nome" class="block font-semibold"
                          >Nome</label
                        >
                        <input
                          id="nome"
                          name="nome"
                          type="text"
                          class="border border-gray-300 rounded-md py-2 px-4 w-full"
                        />
                      </div>
                      <div class="mb-4">
                        <label for="email" class="block font-semibold"
                          >E-mail</label
                        >
                        <input
                          id="email"
                          name="email"
                          type="email"
                          class="border border-gray-300 rounded-md py-2 px-4 w-full"
                        />
                      </div>
                      <div class="mb-4">
                        <label for="senha" class="block font-semibold"
                          >Senha</label
                        >
                        <input
                          id="senha"
                          name="senha"
                          type="password"
                          class="border border-gray-300 rounded-md py-2 px-4 w-full"
                        />
                      </div>
                    </div>

                    <div class="permissions">
                      <div class="mb-4">
                        <label for="permissoes" class="block font-semibold"
                          >Permissões</label
                        >
                        <ul
                          class="items-center w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                        >
                          <li
                            class="checkbox-container w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600"
                          >
                            <div class="flex items-center ps-3">
                              <input
                                id="vue-checkbox"
                                type="checkbox"
                                value="vuejs"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                              />
                              <label
                                for="vue-checkbox"
                                class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                                >Vue JS</label
                              >

                              <input
                                id="vue-checkbox"
                                type="checkbox"
                                value="vuejs"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                              />
                              <label
                                for="vue-checkbox"
                                class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                                >Vue JS</label
                              >

                              <input
                                id="vue-checkbox"
                                type="checkbox"
                                value="vuejs"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                              />
                              <label
                                for="vue-checkbox"
                                class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                                >Vue JS</label
                              >

                              <input
                                id="vue-checkbox"
                                type="checkbox"
                                value="vuejs"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                              />
                              <label
                                for="vue-checkbox"
                                class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                                >Vue JS</label
                              >

                              <input
                                id="vue-checkbox"
                                type="checkbox"
                                value="vuejs"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                              />
                              <label
                                for="vue-checkbox"
                                class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                                >Vue JS</label
                              >
                            </div>
                          </li>
                        </ul>
                      </div>

                      <div class="mb-4">
                        <label for="nome" class="block font-semibold"
                          >Cargo</label
                        >
                        <input
                          id="nome"
                          name="nome"
                          type="text"
                          class="border border-gray-300 rounded-md py-2 px-4 w-full"
                        />
                      </div>
                    </div>
                  </div>
                  <button
                    type="submit"
                    class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-md"
                  >
                    Cadastrar
                  </button>
                </form>
              </div>
            </div>

            <div class="mt-8 grid grid-cols-5 gap-6 w-full">
              <div
                class="bg-white rounded-lg shadow-lg overflow-hidden cursor-pointer hover:w-[105%] hover:h-[105%] duration-700"
              >
                <img
                  src="https://images.unsplash.com/photo-1568901346375-23c9450c58cd?q=80&w=1998&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                  alt="Imagem"
                  class="w-full h-52 object-cover object-center"
                />
                <div class="p-4">
                  <h2 class="font-semibold text-gray-800">Hamburguer</h2>
                  <p class="mt-2 text-gray-600">R$30 - R$20</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
